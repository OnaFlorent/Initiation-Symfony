{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col px-4 py-4">
				<h1 class="pb-2 border-bottom fw-bold">Modification du mot de passe</h1>
				{{ form_start(editPasswordFormType) }}
				    <fieldset class="mb-3">
					    {{ form_row(editPasswordFormType.password) }}
				    </fieldset>
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Envoyer</button>
				    <a href="{{ path('profile_index') }}" class="btn btn-secondary mt-3">Mon compte</a>
                {{ form_end(editPasswordFormType) }}
			</div>
		</div>
	</section>
{% endblock %}